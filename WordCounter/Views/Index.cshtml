<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Count Your Word</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
    <script src="~/js/jquery-3.3.1.js"></script>
  </head>
  <body>
  <h1>Word Counter</h1>
    <div class="container">
    <div class="row">
        <h1>Word Counter</h1>
        <form action='/submit' method="post">
          <div class='col-md-6 form-group'>
            <label for='sentence'>Input a Sentence please:</label>
            <input id="sentence" type="text" maxlength="30">
          </div>

          <div class='col-md-6 form-group'>
            <label for='word-input'>Input a Word</label>
            <input id="word-input" type="text" maxlength="10">
          </div>

          <button type='submit' class='btn btn-success submit-button'>Count My Word!</button>
        </form>
    <div class="results">
      @if (@Model != null)
      {
        @Model.GetWordCount();
      }
    </div>
    </div>
  </body>
</html>
